html
  head
    title #{title}
    link(rel='stylesheet', href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css")
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body

    nav.navbar.navbar-exprend-lg.navbar-dark(style="background-color: rgb(228, 37, 37);")
                a(href="/")
                    img(src="https://www.formula1.com/etc/designs/fom-website/images/f1_logo.svg" href="/auto" height="70px" width="60px")

        
    .container
      .row
        .col-md-6
          // Informazioni sulla persona
          h2 #{t.nome}
          p Auto: #{t.nomeAuto}
          p Campionati vinti: #{t.campionatiVinti}
          p Anno Ingresso: #{t.annoIngresso}
          p Base: #{t.base}
          

        .col-md-6
          // Immagine della persona
          img.img-fluid(src=t.logo, alt='b')
