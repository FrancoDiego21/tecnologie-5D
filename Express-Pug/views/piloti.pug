doctype html 
html 
    head 
        title #{title}
        link(rel='stylesheet', href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css")
        meta(name="viewport" content="width=device-width, initial-scale=1")
    body 
        nav.navbar.navbar-exprend-lg.navbar-dark(style="background-color: rgb(228, 37, 37);")
            a(href="/")
                img(src="https://www.formula1.com/etc/designs/fom-website/images/f1_logo.svg" href="#" height="70px" width="60px")
        
        
            ul.navbar-nav 
                li.nav-item 
                    a.nav-link.text-light(href="/piloti")
                        b Piloti 
                li.nav-item
                    a.nav-link.text-light(href="/auto")
                        b Auto

        h1.text-center Piloti ufficiali 

        .card-columns
            .row
                each d in drivers
                    .col-md-12
                        .card.border-dark
                            img.card-img-top(src=d.immagine)
                            .card-body
                                h5.card-title 
                                    b #{d.nome}
                                a(href=`/piloti?id=${d.id}`)
                                    | View Profile
                                

                